<launch>
  <arg name="ns" default="" />
  <arg name="show_rviz" default="true"/>

  <remap from="$(arg ns)/source_list" to="/source_list" />
  <include file="$(find xarm6_gripper_moveit_config)/launch/moveit_rviz_common.launch">
    <arg name="jnt_stat_source" value="[move_group/fake_controller_joint_states]" />
    <!-- option to launch move_group node or not -->
    <arg name="load_move_group" value="true" />
    <!-- whether to use fake_execution controller to drive the motion -->
    <arg name="fake_execution" value="true" />
    <arg name="gripper_controller" value="true" />
    <arg name="show_rviz" default="$(arg show_rviz)"/>
  </include>

  <!-- launch transform broadcasters -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_tf"
    args="0.0 0.0 0.0  0.7071 0.0 0.7071 0.0 camera_link_base camera_link" />

  <node pkg="tf2_ros" type="static_transform_publisher" name="gripper_camera_tf"
    args="0.068 0.0 0.008   0.0 0.0 0.0 1.0 xarm_gripper_base_link camera_link_base" />

</launch>
